<script>
	const cookie = 'LGPD';
	const valueCookie = 'Opt-Out';

	function deleteOptOutCookie(){
		let containsCookie = getOptOutCookie();
        	if(containsCookie){
            		setCookie('expires=Thu, 01 Jan 1970 00:00:00 UTC');
        	}
	}

	function getOptOutCookie(){
  		let value = document.cookie.split(';').filter((item) => { return item === ' ' + cookie + '=' + valueCookie })[0];
		if(value !== undefined){
			value = value.substring(1);
		}
		return value;
	}

	function setOptOutCookie(){
		let containsCookie = getOptOutCookie();
        	if(!containsCookie){
            		setCookie('Sessao');
        	}
	}

    	function setCookie(expired){
        	document.cookie = cookie + "=" + valueCookie + ";" + expired + ";path=/";
    	}

	function redirectHome(elementChecked){
		let value = getOptOutCookie();
		if(elementChecked){
			!value ? window.location.href = window.location.origin : redirectHome(elementChecked);
		}else{
			!value ? redirectHome(elementChecked) : window.location.href = window.location.origin;
		}
	}

	function updateCookie(){
		let elementChecked = document.getElementById('socialCookies').checked;
		elementChecked ? deleteOptOutCookie() : setOptOutCookie();
		redirectHome(elementChecked);
	}

	window.onload = () => {
		document.getElementById('socialCookies').checked = getOptOutCookie() === undefined;
	}
</script>
